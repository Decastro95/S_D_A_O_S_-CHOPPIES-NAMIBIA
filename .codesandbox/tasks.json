{
  // Install dependencies with npm
  "setupTasks": [
    {
      "name": "npm install",
      "command": "npm install"
    }
  ],

  // Available tasks in CodeSandbox
  "tasks": {
    "dev": {
      "name": "Start Vite Dev Server",
      "command": "npm run dev",
      "runAtStart": true
    },
    "build": {
      "name": "Build for Production",
      "command": "npm run build"
    },
    "preview": {
      "name": "Preview Production Build",
      "command": "npm run preview"
    }
  }
}
