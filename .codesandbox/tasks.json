{
  // These tasks run automatically when the sandbox initializes
  "setupTasks": [
    {
      "name": "npm install",
      "command": "npm install"
    }
  ],

  // Tasks available to run manually in CodeSandbox
  "tasks": {
    "dev": {
      "name": "npm run dev",
      "command": "npm run dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "build": {
      "name": "npm run build",
      "command": "npm run build"
    },
    "start": {
      "name": "npm run start",
      "command": "npm run start"
    },
    "lint": {
      "name": "npm run lint",
      "command": "npm run lint"
    }
  }
}
